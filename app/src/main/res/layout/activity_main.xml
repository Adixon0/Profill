<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/glowny_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/naglowek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/niebieski"
        android:text="Mój Profil"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/etykieta_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tekst_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="padalec@wp.pl"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/etykieta_haslo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hasło:"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tekst_hasla"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:text="Hasło"
        android:textSize="16dp" />

    <Button
        android:id="@+id/przycisk_edytuj_profil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edytuj profil"
        android:backgroundTint="@color/blekitny" />

    <TextView
        android:id="@+id/komunikat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp" />

</LinearLayout>
